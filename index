Â  Â  let socioValidado = '';
Â  Â  // Tarifas fijas para el cÃ¡lculo
Â  Â  const tarifasLunJue = {mayores: 6200, jubilados: 3900, juveniles: 5000, menores: 3500, infantiles: 0};
Â  Â  const tarifasVieDom = {mayores: 7700, jubilados: 4900, juveniles: 5500, menores: 4000, infantiles: 0};

Â  Â  function cerrarModal(id) {
Â  Â  Â  document.getElementById(id).classList.remove('activa');
Â  Â  }

Â  Â  function toggleCheckbox(id) {
