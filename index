  <script>
    // ğŸ‘‡ CONFIGURAR AQUÃ LA URL DE TU APPS SCRIPT
    const APPS_SCRIPT_URL = 'https://script.google.com/macros/s/AKfycbwQ-e-wEaYc_6i63tin_6Nh3qVsymEi_DAFJmpG25x8iqNNLAy5vstny2AudDyZ2lyAIQ/exec';
    
    let socioValidado = '';
    const tarifasLunJue = {mayores: 6200, jubilados: 3900, juveniles: 5000, menores: 3500, infantiles: 0};
    const tarifasVieDom = {mayores: 7700, jubilados: 4900, juveniles: 5500, menores: 4000, infantiles: 0};

    function validarSocio() {
      const numSocio = document.getElementById('numSocio').value;
      const fechaNac = document.getElementById('fechaNac').value;
      const errorDiv = document.getElementById('errorValidacion');
      
      if (!numSocio || !fechaNac) {
        errorDiv.style.display = 'block';
        return;
      }

      // Llamada AJAX a Apps Script
      fetch(`${APPS_SCRIPT_URL}?action=validarSocio&numSocio=${numSocio}&fechaNac=${fechaNac}`)
        .then(response => response.json())
        .then(result => {
          if (result.exito) {
            socioValidado = result.nombre || `Socio ${numSocio}`;
            document.getElementById('nombreSocio').value = socioValidado;
            document.getElementById('modalValidacion').classList.remove('activa');
            document.getElementById('formAgendamiento').classList.add('activa');
          } else {
            errorDiv.textContent = result.mensaje || 'Datos incorrectos';
            errorDiv.style.display = 'block';
          }
        })
        .catch(() => {
          errorDiv.textContent = 'Error de conexiÃ³n. Verifique URL Apps Script.';
          errorDiv.style.display = 'block';
        });
    }

    function toggleCheckbox(id) {
      document.getElementById(id).click();
    }

    function calcularTotal() {
      const fecha = new Date(document.getElementById('fechaEvento').value);
      const diaSemana = fecha.getDay();
      const esVieDomFer = (diaSemana === 5 || diaSemana === 6 || diaSemana === 0);
      const tarifas = esVieDomFer ? tarifasVieDom : tarifasLunJue;

      let total = 0;
      const cantidades = {
        mayores: parseInt(document.getElementById('mayores').value) || 0,
        juveniles: parseInt(document.getElementById('juveniles').value) || 0,
        jubilados: parseInt(document.getElementById('jubilados').value) || 0,
        menores: parseInt(document.getElementById('menores').value) || 0,
        infantiles: parseInt(document.getElementById('infantiles').value) || 0
      };

      // Total invitados aprox (auto-calculado)
      const totalInvitados = Object.values(cantidades).reduce((a, b) => a + b, 0);
      document.getElementById('totalInvitados').value = totalInvitados;

      // Calcular costos
      total += cantidades.mayores * tarifas.mayores;
      total += cantidades.jubilados * tarifas.jubilados;
      total += cantidades.juveniles * tarifas.juveniles;
      total += cantidades.menores * tarifas.menores;

      if (document.getElementById('inflable').checked) total += 20000;
      if (document.getElementById('seguridad').checked) total += 20000;

      // BonificaciÃ³n cumpleaÃ±ero (orden: mayores > juveniles > jubilados > menores)
      if (document.getElementById('cumpleanero').checked) {
        let bonif = 0;
        let restantes = 10;
        
        // Mayores primero
        if (cantidades.mayores >= restantes) {
          bonif += restantes * tarifas.mayores;
          cantidades.mayores -= restantes;
          restantes = 0;
        } else {
          bonif += cantidades.mayores * tarifas.mayores;
          restantes -= cantidades.mayores;
          cantidades.mayores = 0;
        }
        
        // Juveniles
        if (restantes > 0 && cantidades.juveniles > 0) {
          const desc = Math.min(restantes, cantidades.juveniles);
          bonif += desc * tarifas.juveniles;
          cantidades.juveniles -= desc;
          restantes -= desc;
        }
        
        // Jubilados
        if (restantes > 0 && cantidades.jubilados > 0) {
          const desc = Math.min(restantes, cantidades.jubilados);
          bonif += desc * tarifas.jubilados;
          cantidades.jubilados -= desc;
          restantes -= desc;
        }
        
        // Menores
        if (restantes > 0 && cantidades.menores > 0) {
          const desc = Math.min(restantes, cantidades.menores);
          bonif += desc * tarifas.menores;
          cantidades.menores -= desc;
        }
        
        total -= bonif;
      }

      document.getElementById('totalCalculado').textContent = total.toLocaleString('es-AR');
      document.getElementById('totalDiv').style.display = total > 0 ? 'block' : 'none';
      document.getElementById('btnConfirmar').disabled = total === 0 || totalInvitados === 0;
    }

    function mostrarConfirmacion() {
      const tipoTexto = document.getElementById('tipoQuincho').options[document.getElementById('tipoQuincho').selectedIndex].text;
      const detalle = `
        <div style="font-size: 1.1em; line-height: 1.6;">
          <p><strong>ğŸ‘¤ Socio:</strong> ${socioValidado}</p>
          <p><strong>ğŸ“… ${tipoTexto}</strong></p>
          <p><strong>ğŸ•’</strong> ${document.getElementById('fechaEvento').value} 
             ${document.getElementById('horaInicio').value} - ${document.getElementById('horaFin').value}</p>
          <p><strong>ğŸ‘¥ Total:</strong> ${document.getElementById('totalInvitados').value} invitados</p>
          <p><strong>ğŸ“Š Por edad:</strong> May:${document.getElementById('mayores').value} 
             Jub:${document.getElementById('jubilados').value} Juv:${document.getElementById('juveniles').value} 
             Men:${document.getElementById('menores').value} Inf:${document.getElementById('infantiles').value}</p>
          <p><strong>ğŸ’° Total:</strong> $${document.getElementById('totalCalculado').textContent}</p>
          <p><strong>ğŸ“ Lista:</strong> ${document.getElementById('listaInvitados').value.substring(0, 100)}${document.getElementById('listaInvitados').value.length > 100 ? '...' : ''}</p>
        </div>
      `;
      document.getElementById('detalleAgenda').innerHTML = detalle;
      document.getElementById('modalConfirmacion').classList.add('activa');
    }

    function confirmarYGuardar() {
      const datos = {
        numSocio: document.getElementById('numSocio').value,
        fechaNac: document.getElementById('fechaNac').value,
        socio: socioValidado,
        tipo: document.getElementById('tipoQuincho').value,
        fechaEvento: document.getElementById('fechaEvento').value,
        horaInicio: document.getElementById('horaInicio').value,
        horaFin: document.getElementById('horaFin').value,
        totalInvitados: document.getElementById('totalInvitados').value,
        mayores: document.getElementById('mayores').value,
        jubilados: document.getElementById('jubilados').value,
        juveniles: document.getElementById('juveniles').value,
        menores: document.getElementById('menores').value,
        infantiles: document.getElementById('infantiles').value,
        inflable: document.getElementById('inflable').checked,
        cumpleanero: document.getElementById('cumpleanero').checked,
        seguridad: document.getElementById('seguridad').checked,
        total: document.getElementById('totalCalculado').textContent,
        listaInvitados: document.getElementById('listaInvitados').value
      };

      // Enviar a Apps Script
      fetch(APPS_SCRIPT_URL, {
        method: 'POST',
        mode: 'no-cors', // Para compatibilidad
        body: JSON.stringify(datos)
      }).then(() => {
        alert('âœ… Â¡Agenda confirmada! Enviar comprobante por WhatsApp.');
        location.reload();
      }).catch(() => {
        alert('âœ… Agenda enviada. Verificar en Google Sheets.');
        location.reload();
      });
    }

    function copiarCBU() {
      navigator.clipboard.writeText('00700047-20000001084140').then(() => {
        alert('ğŸ“‹ CBU copiado');
      });
    }

    function cerrarModal(id) {
      document.getElementById(id).classList.remove('activa');
    }

    // Inicializar
    document.addEventListener('DOMContentLoaded', calcularTotal);
  </script>
