Â  Â  function toggleCamposTipo() {
Â  Â  Â  const tipo = document.getElementById('tipoQuincho').value;
Â  Â  Â  // Ejemplo: si quisieras ocultar/mostrar cosas segÃºn el tipo
Â  Â  Â  // Por ejemplo, el campo de seguridad solo aplica a "cerrado"
Â  Â  Â  const seguridadGroup = document.querySelector('.checkbox-group input#seguridad').closest('.checkbox-group');
Â  Â  Â  if (seguridadGroup) {
Â  Â  Â  Â  seguridadGroup.style.display = tipo === 'cerrado' ? 'flex' : 'none';
Â  Â  Â  }
Â  Â  Â  // Re-calcular despuÃ©s de cambiar el tipo, por si se deshabilitÃ³ un costo fijo
Â  Â  Â  calcularTotal();
