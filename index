Â  Â  function validarSocio() {
Â  Â  Â  const numSocio = document.getElementById('numSocio').value;
Â  Â  Â  const fechaNac = document.getElementById('fechaNac').value;
Â  Â  Â  const errorDiv = document.getElementById('errorValidacion');
Â  Â  Â Â 
Â  Â  Â  errorDiv.style.display = 'none';
Â  Â  Â  if (!numSocio || !fechaNac) {
Â  Â  Â  Â  errorDiv.textContent = 'âŒ Por favor, ingrese ambos datos.';
Â  Â  Â  Â  errorDiv.style.display = 'block';
Â  Â  Â  Â  return;
Â  Â  Â  }

Â  Â  Â  // Llamada AJAX a Apps Script
Â  Â  Â  fetch(`${APPS_SCRIPT_URL}?action=validarSocio&numSocio=${numSocio}&fechaNac=${fechaNac}`)
Â  Â  Â  Â  .then(response => response.json())
Â  Â  Â  Â  .then(result => {
Â  Â  Â  Â  Â  if (result.exito) {
Â  Â  Â  Â  Â  Â  socioValidado = result.nombre || `Socio ${numSocio}`;
Â  Â  Â  Â  Â  Â  document.getElementById('nombreSocio').value = socioValidado;
Â  Â  Â  Â  Â  Â  cerrarModal('modalValidacion');
Â  Â  Â  Â  Â  Â  document.getElementById('formAgendamiento').classList.add('activa');
Â  Â  Â  Â  Â  Â  calcularTotal(); // Calcular el total inicial
Â  Â  Â  Â  Â  } else {
Â  Â  Â  Â  Â  Â  errorDiv.textContent = result.mensaje || 'âŒ Datos incorrectos o socio no al dÃ­a.';
Â  Â  Â  Â  Â  Â  errorDiv.style.display = 'block';
Â  Â  Â  Â  Â  }
Â  Â  Â  Â  })
Â  Â  Â  Â  .catch(() => {
Â  Â  Â  Â  Â  errorDiv.textContent = 'âŒ Error de conexiÃ³n. Intente mÃ¡s tarde.';
Â  Â  Â  Â  Â  errorDiv.style.display = 'block';
Â  Â  Â  Â  });
Â  Â  }

Â  Â  function calcularTotal() {
Â  Â  Â  const tipoQuincho = document.getElementById('tipoQuincho').value;
Â  Â  Â  const fechaValor = document.getElementById('fechaEvento').value;
Â  Â  Â Â 
Â  Â  Â  let total = 0;
Â  Â  Â  let totalInvitados = 0;
Â  Â  Â Â 
Â  Â  Â  // Bloquear cÃ¡lculo si no hay tipo o fecha
Â  Â  Â  if (!tipoQuincho || !fechaValor) {
Â  Â  Â  Â  document.getElementById('totalCalculado').textContent = '0';
Â  Â  Â  Â  document.getElementById('totalDiv').style.display = 'none';
Â  Â  Â  Â  document.getElementById('btnConfirmar').disabled = true;
Â  Â  Â  Â  document.getElementById('totalInvitados').value = 0;
Â  Â  Â  Â  return;
Â  Â  Â  }

Â  Â  Â  const fecha = new Date(fechaValor);
Â  Â  Â  const diaSemana = fecha.getDay(); // 0 = Domingo, 6 = SÃ¡bado
Â  Â  Â  // Considera Viernes (5), SÃ¡bado (6) y Domingo (0) como fin de semana
Â  Â  Â  const esVieDomFer = (diaSemana === 5 || diaSemana === 6 || diaSemana === 0);
Â  Â  Â  const tarifas = esVieDomFer ? tarifasVieDom : tarifasLunJue;
Â  Â  Â Â 
Â  Â  Â  // Copiar cantidades para manejar la bonificaciÃ³n sin modificar los inputs
Â  Â  Â  const cantidades = {
Â  Â  Â  Â  mayores: parseInt(document.getElementById('mayores').value) || 0,
Â  Â  Â  Â  juveniles: parseInt(document.getElementById('juveniles').value) || 0,
Â  Â  Â  Â  jubilados: parseInt(document.getElementById('jubilados').value) || 0,
Â  Â  Â  Â  menores: parseInt(document.getElementById('menores').value) || 0,
Â  Â  Â  Â  infantiles: parseInt(document.getElementById('infantiles').value) || 0
Â  Â  Â  };

Â  Â  Â  totalInvitados = Object.values(cantidades).reduce((a, b) => a + b, 0);
Â  Â  Â  document.getElementById('totalInvitados').value = totalInvitados;

Â  Â  Â  // Si es 'parrilla', el costo es 0 (solo agenda)
Â  Â  Â  if (tipoQuincho === 'parrilla') {
Â  Â  Â  Â  total = 0;
Â  Â  Â  } else { // Quincho Cerrado
Â  Â  Â  Â  // Calcular costos completos
Â  Â  Â  Â  let subtotal = 0;
Â  Â  Â  Â  subtotal += cantidades.mayores * tarifas.mayores;
Â  Â  Â  Â  subtotal += cantidades.jubilados * tarifas.jubilados;
Â  Â  Â  Â  subtotal += cantidades.juveniles * tarifas.juveniles;
Â  Â  Â  Â  subtotal += cantidades.menores * tarifas.menores;
Â  Â  Â  Â  // Infantiles es 0

Â  Â  Â  Â  // Costos Fijos
Â  Â  Â  Â  if (document.getElementById('inflable').checked) subtotal += 20000;
Â  Â  Â  Â  if (document.getElementById('seguridad').checked) subtotal += 20000;

Â  Â  Â  Â  // Aplicar BonificaciÃ³n CumpleaÃ±ero (hasta 10)
Â  Â  Â  Â  if (document.getElementById('cumpleanero').checked) {
Â  Â  Â  Â  Â  let bonif = 0;
Â  Â  Â  Â  Â  let restantes = 10;
Â  Â  Â  Â  Â Â 
Â  Â  Â  Â  Â  const categorias = [
Â  Â  Â  Â  Â  Â  {key: 'mayores', tarifa: tarifas.mayores},
Â  Â  Â  Â  Â  Â  {key: 'juveniles', tarifa: tarifas.juveniles}, // Cambiado a 2do lugar
Â  Â  Â  Â  Â  Â  {key: 'jubilados', tarifa: tarifas.jubilados}, // Cambiado a 3er lugar
Â  Â  Â  Â  Â  Â  {key: 'menores', tarifa: tarifas.menores}
Â  Â  Â  Â  Â  ];
Â  Â  Â  Â  Â Â 
Â  Â  Â  Â  Â  // Iterar en orden de prioridad
Â  Â  Â  Â  Â  for (const cat of categorias) {
Â  Â  Â  Â  Â  Â  if (restantes <= 0) break;
Â  Â  Â  Â  Â  Â  const desc = Math.min(restantes, cantidades[cat.key]);
Â  Â  Â  Â  Â  Â  bonif += desc * cat.tarifa;
Â  Â  Â  Â  Â  Â  restantes -= desc;
Â  Â  Â  Â  Â  }
Â  Â  Â  Â  Â  subtotal -= bonif;
Â  Â  Â  Â  }
Â  Â  Â  Â  total = subtotal;
Â  Â  Â  }

Â  Â  Â  document.getElementById('totalCalculado').textContent = Math.max(0, total).toLocaleString('es-AR');
Â  Â  Â  document.getElementById('totalDiv').style.display = total > 0 ? 'block' : 'none';
Â  Â  Â  // Habilitar botÃ³n si hay tipo, fecha y al menos un invitado, e importe > 0 (si es quincho cerrado)
Â  Â  Â  document.getElementById('btnConfirmar').disabled = !tipoQuincho || !fechaValor || totalInvitados === 0;
Â  Â  }

